<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_300"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/grid_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <ImageView
                android:id="@+id/foto_container_grid"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@color/accent_200"
                android:padding="50dp"
                android:src="@drawable/ic_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_judul_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Lasting Afection Tshirt  - Parent Blessing White"
                android:textColor="@color/primary_100"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/foto_container_grid"
                app:layout_constraintStart_toStartOf="@+id/foto_container_grid"
                app:layout_constraintTop_toBottomOf="@+id/foto_container_grid" />

            <TextView
                android:id="@+id/tv_harga_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Rp172.000"
                android:textColor="@color/text_200"
                android:textSize="15sp"
                android:paddingTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_judul_grid"
                app:layout_constraintStart_toStartOf="@+id/tv_judul_grid"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_grid" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

</androidx.constraintlayout.widget.ConstraintLayout>