<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_produk"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/delete_item"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/foto_container_list"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@color/accent_200"
                android:padding="20dp"
                android:src="@drawable/ic_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/outfit_regular"
                android:text="ID Produk : "
                android:textColor="@color/primary_100"
                app:layout_constraintStart_toEndOf="@+id/foto_container_list"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_id_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:text="WYH79OJ6S4"
                android:textColor="@color/primary_100"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/tv_judul_pruduk"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Lasting Afection Tshirt  - Parent Blessing White"
                android:textColor="@color/primary_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/foto_container_list"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Kategori : "
                android:textColor="@color/primary_100"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/foto_container_list"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_pruduk" />

            <TextView
                android:id="@+id/tv_kategori_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:text="Kaos"
                android:textColor="@color/primary_100"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/tv_harga_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Rp170.000"
                android:textColor="@color/text_200"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/foto_container_list" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/delete_item"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:padding="5dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>