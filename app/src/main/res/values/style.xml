<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Splash Screen Style -->
    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_design</item>
    </style>

    <style name="TextHeadAuthMenu">
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/primary_100</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/primary_100</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/outfit_semi_bold</item>
    </style>

    <style name="OutlinedBox.Overlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_100</item>
    </style>



</resources>